@using BaWebtool2.Data
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BaWebtool2</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@($"{NavMenuCssClass} sidebar")" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-ellipses" aria-hidden="true"></span> All Algorithms
            </NavLink>
        </div>

        <div class="nav-item px-3">
        <NavLink class="nav-link" @onclick="() => expandSubNav = !expandSubNav">
            <span class="@($"oi {Chevron}")" aria-hidden="true"></span> Categories
        </NavLink>
        </div>
        @if (expandSubNav)
        {

            foreach (var category in Enum.GetValues<Algorithm.AlgorithmCategory>())
            {
                <div class="nav-item px-3 ms-3 mt-2 mb-2">
                    <NavLink class="nav-link" href="@($"category/{category}")">
                        <span class=@category.GetIcon() aria-hidden="true"></span>
                        @category.GetDisplayName()
                    </NavLink>
                </div>
            }
        }
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private bool expandSubNav;
    private string Chevron => expandSubNav ? "oi-chevron-bottom" : "oi-chevron-right";


    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}